{
  "name": "chefclient-sparkpad-management",
  "description": "",
  "json_class": "Chef::Role",
  "default_attributes": {
    "deployuser": "root",
    "projectname": "sparkpadmgmt",
    "externalmode": "bootproxy",
    "domainname": "liansuola.com",
    "docker": {
      "privaterepo": "dockerpriv.kybot.io:5002",
      "username": "keithyau",
      "password": "thomas123"
    },
    "deploycode": {
      "basedirectory": "/root/tools/sparkpad-management/",
      "configuration": {
        "general": {
          "elasticsearch": {
            "management/elasticsearch.yml": "/usr/share/elasticsearch/config/elasticsearch.yml"
          },
          "logstash": {
            "management/config_logstash.yml": "/usr/share/logstash/config/logstash.yml",
            "management/pipeline_logstash.yml": "/usr/share/logstash/pipeline/logstash.yml"
          },
          "kibana": {
            "management/kibana.yml": "/usr/share/kibana/config/kibana.yml"
          }
        }
      },
      "localfolder": {
        "jenkins": "nodownload",
        "elasticsearch": "nodownload",
        "logstash": "nodownload",
        "kibana": "nodownload",
        "bootproxy": "nodownload"
      },
      "runtime": {
        "elasticsearch": {
          "tag": "latest",
          "image": "elasticsearch",
          "env": [
            "ES_JAVA_OPTS='-Xmx256m -Xms256m'"
          ],
          "mountlocal": "localdir",
          "mountdocker": "/usr/share/elasticsearch/data",
          "ports": "8001:9200"
        },
        "logstash": {
          "tag": "latest",
          "image": "logstash",
          "env" : [
             "LS_JAVA_OPTS='-Xmx256m -Xms256m'"
          ],
          "ports": "8002:5000"
        },
        "kibana": {
          "tag": "latest",
          "image": "kibana",
          "ports": "8003:5601"
        },
        "jenkins": {
          "tag": "latest",
          "image": "jenkins",
          "mountlocal": "localdir",
          "mountdocker": "/var/jenkins_home",
          "ports": [
            "8004:8080",
            "50000:50000"
          ]
        },
        "bootproxy": {
          "tag": "stable-alpine",
          "image": "daocloud.io/library/nginx",
          "mountlocal": "localdir",
          "mountdocker": "/etc/nginx/conf.d/",
          "ports": [
            "80:80",
            "5000:5000"
          ]
        }
      }
    }
  },
  "override_attributes": {},
  "chef_type": "role",
  "run_list": [
    "recipe[git]",
    "recipe[build-essential]",
    "recipe[basicservice]",
    "recipe[deploycode]",
    "recipe[webserver]"
  ],
  "env_run_lists": {}
}

{
   "name":"chefclient-sparkpad-aliyun",
   "description":"",
   "json_class":"Chef::Role",
   "default_attributes":{
      "deployuser":"root",
      "projectname":"sparkpadtv",
      "docker": {
          "privaterepo":"dockerpriv.kybot.io:5002",
          "username":"keithyau",
          "password":"thomas123"
      },
      "deploycode":{
        "basedirectory":"/root/tools/code/",
        "configuration":{
            "sparkpad_tvbackend_drupal": {
              "folders": {
                "sites/default/files" : "777",
                "sites/default/privates" : "777"
              },
              "settings": {
                "general.settings.php" : "sites/default/settings.php"
              },
              "variables" : {
                "dbhost": "47.91.156.91",
                "dbuser": "root",
                "dbpass": "thomas123"
              }
            } 
        },
        "localfolder":{
            "mysql":"nodownload",
            "sparkposcn":{
              "giturl": "git@git.coding.net:chankongching/sparkpos.cn.git",
              "branch": "master"
            },
            "sparkpad_tvbackend_drupal":{
              "giturl": "git@git.coding.net:chankongching/sparkpad_tvbackend_drupal.git",
              "branch": "master"
            }
         },
         "runtime":{
            "mysql":{
               "tag":"latest",
               "image":"mysql",
               "env":["MYSQL_ROOT_PASSWORD=thomas123"],
               "mountlocal":"/root/mysqldir",
               "mountdocker":"/var/lib/mysql",
               "ports":[
                  "3306:3306"
               ]
            },
            "sparkposcn":{
                "tag":"stable-alpine",
                "image":"dockerpriv.kybot.io:5002/keithyau/nginx",
                "mountlocal":"localdir",
                "mountdocker":"/usr/share/nginx/html",
                "ports":"80:80"
            },
            "sparkpad_tvbackend_drupal":{
                "tag":"latest",
                "image":"dockerpriv.kybot.io:5002/keithyau/drupalnginxphp7shanghai",
                "mountlocal":"multipledir",
                "mountdocker":[
                    "/root/tools/code/sparkpad_tvbackend_drupal:/var/www/html",
                    "/usr/bin/which:/usr/bin/which",
                    "/root/php-fpm.conf:/usr/local/php/etc/php-fpm.conf"
                ],
                "ports":"8082:80",
                "exec": "ln -sf /dev/stderr /var/log/php-fpm.log"
            }
         }
      }
   },
   "override_attributes":{

   },
   "chef_type":"role",
   "run_list":[
      "recipe[git]",
      "recipe[build-essential]",
      "recipe[basicservice]",
      "recipe[deploycode]",
      "recipe[drupalsetting]",
      "recipe[webserver]"
   ],
   "env_run_lists":{

   }
}

{
"name": "chefclient-kyligence-docker-prod",
  "description": "Role json file for starting and maintaining Kybot QA env",
  "json_class": "Chef::Role",
  "default_attributes": {
    "deployuser" : "ec2-user",
    "projectname": "kyligence",
    "docker": {
      "privaterepo":"dockerpriv.kybot.io:5002",
      "username":"keithyau",
      "password":"thomas123"
    },
    "deploycode": {
      "basedirectory" : "/home/ec2-user/tools/tomcat_dir/",
      "configuration":{
        "general" : {
          "prod": {
            "prod_server.xml" : "/usr/local/tomcat/conf/server.xml",
            "prod_web.xml": "/usr/local/tomcat/conf/web.xml",
            "prod_logging.properties": "/usr/local/tomcat/conf/logging.properties",
            "prod_context.xml": "/usr/local/tomcat/conf/context.xml" 
          }
        }
      },
      "localfolder": {
        "prod": {
          "giturl": "git@gitlab.kybot.io:root/kybot-deployment.git",
          "branch": "prod"
        }
      },
      "runtime": {
        "prod":{
          "tag":"latest",
           "image":"dockerpriv.kybot.io:5002/keithyau/tomcatglusternewrelic",
           "mountlocal":"localdir",
           "mountdocker":"/usr/local/tomcat/webapps",
           "ports":"8082:8080",
           "exec": "if ! grep -q 10.0.0.61 \"/etc/fstab\"; then echo \"10.0.0.61:/glt0 /data glusterfs defaults 0 0\" >> /etc/fstab;fi;mount /data"
         }
      }
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "recipe[git]",
    "recipe[build-essential]",
    "recipe[basicservice]",
    "recipe[glusterfs]",
    "recipe[diskmount]",
    "recipe[deploycode]",
    "recipe[configs]",
    "recipe[webserver]"
  ],
  "env_run_lists": {
  }
}

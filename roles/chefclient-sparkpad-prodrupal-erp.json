{
  "name": "chefclient-sparkpad-prodrupal-erp",
  "description": "Role json file for starting and maintaining Sparkpad ZKF drupal backend",
  "json_class": "Chef::Role",
  "default_attributes": {
    "deployuser": "root",
    "projectname": "zkf",
    "externalmode": "bootproxy",
    "domainname": "zkungfu.com",
    "docker": {
      "privaterepo": "dockerpriv.kybot.io:5002",
      "username": "keithyau",
      "password": "thomas123"
    },
    "deploycode": {
      "basedirectory": "/app/web/",
      "configuration":{
        "general" : {
          "bootproxy" : {
            "spzkf_enablenginxlog": "/etc/nginx/nginx.conf"
          },
          "erp": {
            "spzkf.nginx.conf": "/usr/local/nginx/conf/nginx.conf"
          },
          "loadbalancer": {
            "loadbalancer.conf": "/etc/nginx/conf.d/default.conf"
          }
        },
        "drupal": {
          "erp": {
            "folders": {
              "sites/default/files" : "777",
              "sites/default/privates" : "777"
            },
            "settings": {
              "spzkf_erp.settings.php" : "sites/default/settings.php"
            },
            "variables" : {
              "dbhost": "172.16.103.121",
              "dbuser": "crm",
              "dbpass": "?*;^1T/%XyJA;W!rED3H"
            }
          }
        }
      },
      "localfolder": {
        "welcome":{
          "giturl": "git@bitbucket.org:chankongching/bootdev_welcome.git",
          "branch": "master"
        },
        "erp": {
          "giturl":"git@git.coding.net:keithyau/sparkpad-drupal-backend-erp.git",
          "branch": "master"
        },
        "bootproxy":"nodownload",
        "loadbalancer":"nodownload"
      },
      "runtime": {
        "welcome": {
          "tag":"7.1.4_v4",
          "image":"dockerpriv.kybot.io:5002/keithyau/drupalnginxphp7shanghai",
          "mountlocal":"localdir",
          "mountdocker":"/var/www/html",
          "ports":"9080:80"
        },
        "erp": {
          "tag": "7.1.4_v4_oci8",
          "image": "dockerpriv.kybot.io:5002/keithyau/drupalnginxphp7shanghai",
          "env":["NEWRELICKEY=839e85790a22ffa6ed5818850d8fc3307d92e072","NEWRELICAPPNAME=ZKF_ERP_Production"],
          "mountlocal": "multipledir",
          "mountdocker": [
            "/app/web/erp:/var/www/html"
          ],
          "ports": "9083:80",
          "customdomainprefix": "store-"
        },
        "loadbalancer":{
          "tag":"stable-alpine",
          "image":"daocloud.io/library/nginx",
          "mountlocal": "multipledir",
          "mountdocker": [
            "/etc/hosts:/etc/hosts",
            "/usr/bin/curl:/usr/bin/curl"
          ],
          "ports": "80:80",
          "network_mode":"host"
        },
        "bootproxy":{
          "tag":"stable-alpine",
          "image":"daocloud.io/library/nginx",
          "mountlocal":"localdir",
          "mountdocker":"/etc/nginx/conf.d/",
          "ports":[
            "8888:80"
          ]
        }
      }
    }
  },
  "override_attributes": {},
  "chef_type": "role",
  "run_list": [
    "recipe[git]",
    "recipe[build-essential]",
    "recipe[basicservice]",
    "recipe[deploycode]",
    "recipe[configs]",
    "recipe[drupalsetting]",
    "recipe[webserver]"
  ],
  "env_run_lists": {}
}
